<?xml version="1.0"?>
<ruleset name="ancarda PHP Coding Standard">
    <description>PSR2 with modern array syntax</description>

    <!-- Display progress -->
    <arg value="p"/>

    <!-- Use color -->
    <arg name="colors"/>

    <!-- Base off PSR2 -->
    <rule ref="PSR2"/>

    <!-- Ban old array syntax - use [] over array() -->
    <rule ref="Generic.Arrays.DisallowLongArraySyntax"/>

    <!-- Check all directories -->
    <file>src</file>
    <file>test</file>
</ruleset>
